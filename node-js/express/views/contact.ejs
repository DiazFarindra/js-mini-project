<div class="row">
    <div class="col-md-6">
        <h2>Contact List</h2>

        <a href="/contact/add" class="btn btn-outline-success my-2">
            add contact
        </a>

        <% if (message.length != 0) { %>
            <div class="alert alert-success my-3" role="alert">
                <%= message %>
            </div>
        <% } %>

        <table class="table table-success mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if ( contacts.length < 1) { %>
                    <tr>
                        <td colspan="5">
                            <div class="alert alert-warning" role="alert">
                                no data yet! go back later
                            </div>
                        </td>
                    </tr>
                <% } %>
                <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                        <th scope="row"><%= i++ %></th>
                        <td><%= contact.name %></td>
                        <td><%= contact.phone %></td>
                        <td><%= contact.email %></td>
                        <td>
                            <a href="/contact/<%= contact.id %>" class="btn btn-dark btn-sm">
                                <i class="bi bi-info-circle"></i>
                                detail
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>edit contact</h2>

            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <form action="/contact?_method=PATCH" method="post">
                <input type="hidden" name="_id" value="<%= contact._id %>">
                <input type="hidden" name="oldEmail" value="<%= contact.oldEmail || contact.email %>">
                <input type="hidden" name="oldPhone" value="<%= contact.oldPhone || contact.phone %>">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= contact.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="<%= contact.phone %>" required>
                </div>
                <button type="submit" class="btn btn-primary">edit</button>
            </form>
        </div>
    </div>
</div>
